{
  "compilerOptions": {
    "outDir": "./dist", // Output directory for compiled files
    "rootDir": "./src", // Changed from "." to "./src"
    "baseUrl": ".", // Base URL for module resolution
    "target": "es2020",
    "module": "es2020",
    "moduleResolution": "node",
    "types": ["cypress", "node"],
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "emitDeclarationOnly": false // Ensure JS files are also emitted for tsc (though Rollup handles final JS)
  },
  "include": ["./src/**/*"],
  "exclude": ["**/*.spec.ts", "**/*.spec.tsx"]
}
